# frozen_string_literal: true

require 'rails_helper'

RSpec.describe <%= form_class_name %>, type: :form do
  subject(:form) { described_class.new(input) }

  let(:input) { build(<%= form_input_name.to_sym.inspect %>) }

  it 'has a valid input factory' do
    expect(form).to be_valid
  end

  describe '#perform' do
    subject(:perform) { form.perform }

    it 'does something useful' do
      expect(perform).to be_truthy
    end

    context 'when the input is invalid' do
      let(:input) { build(<%= form_input_name.to_sym.inspect %>, :invalid) }

      it 'returns false' do
        expect(perform).to be(false)
      end
    end
  end
end
