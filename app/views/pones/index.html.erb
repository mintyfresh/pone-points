<div class="row">
  <% @pones.each do |pone| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch">
      <div class="card mb-3 w-100">
        <div class="card-header">
          <%= link_to(pone.name, pone) %>
        </div>
        <div class="card-body">
          <% if pone.avatar.attached? %>
            <%= image_tag(pone.avatar, alt: pone.name, class: 'img-fluid mb-2 d-block mx-auto', style: 'max-height: 200px') %>
          <% end %>
          <%= number_to_human(pone.points_count) %> good pone <%= 'point'.pluralize(pone.points_count) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
