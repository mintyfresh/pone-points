<div>
  <%= link_to('Create New Group', new_group_path, class: 'btn btn-primary float-end') if Pundit.policy(current_pone, Group).create? %>
  <h1>Groups</h1>
</div>
<% @groups.each do |group| %>
  <div class="card mb-2">
    <div class="card-body">
      <div class="card-title"><%= link_to(group.name, group) %></div>
      <%= group.description %>
      <div>
        <%= number_to_human(group.members_count) %> <%= 'member'.pluralize(group.members_count) %>
      </div>
    </div>
  </div>
<% end %>
