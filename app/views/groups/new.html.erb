<h1>Create New Group</h1>
<%= form_with(model: @form, url: groups_path, method: :post, id: 'new_group_form') do |form| %>
  <div class="mb-3">
    <%= form.label(:name) %>
    <%= form.text_field(:name, class: 'form-control', maxlength: Group::NAME_MAX_LENGTH, required: true) %>
    <%= render(FormControlErrorsComponent.new(key: :name, errors: @form.errors)) %>
  </div>
  <div class="mb-3">
    <%= form.label(:description) %>
    <%= form.text_area(:description, class: 'form-control', maxlength: Group::DESCRIPTION_MAX_LENGTH) %>
    <%= render(FormControlErrorsComponent.new(key: :description, errors: @form.errors)) %>
  </div>
  <%= render(FormBaseErrorsComponent.new(errors: @form.errors)) %>
  <div class="text-end">
    <%= link_to('Cancel', groups_path, class: 'btn btn-secondary float-start') %>
    <%= form.submit('Create Group', class: 'btn btn-primary') %>
  </div>
<% end %>
