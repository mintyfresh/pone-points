<%= render(AccountPanelComponent.new) do %>
  <div class="row">
    <h1 class="col">
      Webhooks
    </h1>
    <div class="col-auto text-end">
      <%= link_to('Create Webhook', new_account_webhook_path, class: 'btn btn-primary mt-auto') %>
    </div>
  </div>
  <%= render(WebhookListComponent.new(
    webhooks:    @webhooks,
    webhook_url: -> (webhook) { account_webhook_path(webhook) },
    placeholder: "You haven't created any webhooks yet."
  )) %>
<% end %>
