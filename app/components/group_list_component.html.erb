<% @groups.each do |group| %>
  <div class="card mb-2">
    <div class="card-body">
      <div class="card-title"><%= link_to(group.name, group) %></div>
      <%= group.description %>
      <div>
        Owned by <%= link_to(group.owner.name, group.owner) %> -
        <%= number_to_human(group.members_count) %> <%= 'member'.pluralize(group.members_count) %>
      </div>
    </div>
  </div>
<% end %>
<% if @groups.none? && @placeholder.present? %>
  <div class="card">
    <div class="card-body text-center">
      <%= @placeholder %>
    </div>
  </div>
<% end %>
